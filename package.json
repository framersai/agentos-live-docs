{
  "name": "openstrand",
  "version": "1.0.0",
  "private": true,
  "description": "OpenStrand monorepo - AI-native knowledge infrastructure.",
  "license": "MIT",
  "engines": {
    "node": ">=18.17.0"
  },
  "scripts": {
    "dev": "concurrently --kill-others-on-fail --prefix-colors bgBlue.bold,bgGreen.bold,bgMagenta.bold --names backend,frontend,admin \"npm run dev --workspace=@framers/openstrand-teams-backend\" \"npm run dev --workspace=openstrand-app\" \"npm run dev --workspace=openstrand-admin\"",
    "dev:admin": "npm run dev --workspace openstrand-admin",
    "dev:plugin": "npm run dev:plugin --workspace @framers/openstrand-plugins",
    "build": "npm run build --workspaces --if-present",
    "test": "npm run test --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "format": "npm run format --workspaces --if-present",
    "format:check": "npm run format:check --workspaces --if-present",
    "typecheck": "npm run type-check --workspaces --if-present",
    "clean": "rimraf .devcache node_modules packages/**/dist packages/**/node_modules openstrand-app/.next openstrand-app/node_modules openstrand-admin/.next openstrand-admin/node_modules"
  },
  "workspaces": [
    "openstrand-app",
    "openstrand-admin",
    "packages/*"
  ],
  "devDependencies": {
    "concurrently": "^8.2.2",
    "rimraf": "^5.0.5",
    "semantic-release": "^24.0.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/github": "^10.3.2",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/npm": "^12.0.1",
    "@semantic-release/commit-analyzer": "^13.0.0",
    "@semantic-release/release-notes-generator": "^13.0.0"
  },
  "packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e"
}