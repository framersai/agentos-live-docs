{
  "name": "openstrand",
  "version": "1.0.0",
  "private": true,
  "description": "OpenStrand monorepo - AI-native knowledge infrastructure.",
  "license": "MIT",
  "engines": {
    "node": ">=18.17.0"
  },
  "scripts": {
    "dev": "concurrently --kill-others-on-fail --prefix-colors bgBlue.bold,bgGreen.bold,bgMagenta.bold --names backend,frontend,agentos-workbench \"pnpm --filter voice-chat-assistant-backend dev\" \"pnpm --filter voice-chat-assistant-frontend dev\" \"pnpm --filter @framersai/agentos-workbench dev\"",
    "dev:admin": "npm run dev --workspace openstrand-admin",
    "dev:plugin": "npm run dev:plugin --workspace @framers/openstrand-plugins",
    "build": "npm run build --workspaces --if-present",
    "prepare": "husky install",
    "install:hooks": "node scripts/installHooks.mjs",
    "test": "npm run test --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "format": "npm run format --workspaces --if-present",
    "format:check": "npm run format:check --workspaces --if-present",
    "typecheck": "npm run type-check --workspaces --if-present",
    "clean": "rimraf .devcache node_modules packages/**/dist packages/**/node_modules openstrand-app/.next openstrand-app/node_modules openstrand-admin/.next openstrand-admin/node_modules"
  },
  "workspaces": [
    "openstrand-app",
    "openstrand-admin",
    "packages/*"
  ],
  "devDependencies": {
    "@nx/workspace": "^22.1.0",
    "@secretlint/secretlint-rule-preset-recommend": "^7.0.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.0",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^10.3.2",
    "@semantic-release/npm": "^12.0.1",
    "@semantic-release/release-notes-generator": "^13.0.0",
    "concurrently": "^8.2.2",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.9",
    "nx": "^22.1.0",
    "remark-cli": "^12.0.1",
    "remark-preset-lint-recommended": "^6.1.2",
    "rimraf": "^5.0.5",
    "secretlint": "^7.0.0",
    "semantic-release": "^24.0.0"
  },
  "lint-staged": {
    "*.{js,ts,tsx,vue}": "npm run format:check",
    "*.json": "npm run format:check",
    "*.md": "remark . --quiet --frail",
    "*": "secretlint --maskSecrets"
  },
  "packageManager": "pnpm@10.15.1",
  "dependencies": {
    "@framers/codex-extensions": "workspace:*"
  }
}
