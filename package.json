{
  "name": "voice-chat-assistant",
  "version": "0.1.0",
  "private": true,
  "description": "Voice-first assistant monorepo (backend, VCA frontend, landing app, AgentOS core library)",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/manicinc/voice-chat-assistant.git"
  },
  "bugs": {
    "url": "https://github.com/manicinc/voice-chat-assistant/issues"
  },
  "homepage": "https://github.com/manicinc/voice-chat-assistant#readme",
  "license": "MIT",
  "packageManager": "pnpm@10.15.1",
  "engines": {
    "node": ">=18.18.0",
    "pnpm": ">=8"
  },
  "workspaces": [
    "backend",
    "frontend",
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "prepare": "husky install",
    "install-all": "pnpm install",
    "dev": "pnpm run dev:workbench",
    "dev:vca": "concurrently \"pnpm --filter ./backend run dev\" \"pnpm --filter ./frontend run dev\"",
    "dev:workbench": "concurrently \"pnpm --filter ./backend run dev\" \"pnpm --filter @framersai/agentos-client dev\"",
    "dev:landing": "concurrently \"pnpm --filter ./backend run dev\" \"pnpm --filter @framersai/agentos.sh dev\"",
    "dev:landing:solo": "pnpm --filter @framersai/agentos.sh dev",
    "build": "pnpm run build:agentos && pnpm run build:frontend && pnpm run build:backend",
    "build:agentos": "pnpm --filter @agentos/core run build",
    "build:frontend": "pnpm --filter ./frontend run build",
    "build:backend": "pnpm --filter ./backend run build",
    "build:landing": "pnpm --filter @framersai/agentos.sh build",
    "start:prod": "pnpm run build && concurrently \"pnpm --filter ./backend start\" \"pnpm --filter ./frontend run preview -- --host 0.0.0.0\"",
    "typecheck": "pnpm -r run typecheck",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "test": "pnpm -r --filter @agentos/core run test",
    "test:watch": "pnpm --filter @agentos/core run dev:test",
    "coverage": "pnpm --filter @agentos/core run test -- --coverage",
    "docs": "pnpm run docs:library && pnpm run docs:api",
    "docs:library": "typedoc --options typedoc.json",
    "docs:api": "node scripts/generate-api-docs.mjs",
    "docs:serve": "npx http-server docs-generated -p 8080 -o",
    "clean": "pnpm -r exec rimraf dist"
  },
  "devDependencies": {
    "@types/natural": "^5.1.5",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.0.11",
    "postcss-nesting": "^13.0.1",
    "prettier": "^3.3.2",
    "typedoc": "^0.28.14",
    "typedoc-plugin-markdown": "^4.9.0"
  },
  "dependencies": {
    "highlight.js": "^11.11.1",
    "jszip": "^3.10.1",
    "pino": "^9.3.0",
    "stemmer": "^2.0.1"
  },
  "keywords": [
    "voice",
    "assistant",
    "speech",
    "agentos",
    "multilingual",
    "ai"
  ],
  "lint-staged": {
    "**/*.{ts,js,json,md}": [
      "prettier --write"
    ]
  }
}
